{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ES2017"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src", ".eslintrc.js"],
  "exclude": ["node_modules", ".eslintrc.js"],
  "typeRoots": ["./global.d.ts", "./node_modules/@types"]
}
